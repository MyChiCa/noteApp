<view>
  <view class="title">申请加入杭州映兔科技</view>
  <view class="form">
    <form bindsubmit="formSubmit">
        <view class="form-item">
          <view class="form-label">真实姓名</view>
          <input name="name" class="form-input" placeholder="姓名" />
        </view>
        <view class="form-item">
          <view class="form-label">工作职位</view>
          <input name="position" class="form-input" placeholder="职位" />
        </view>
        <view class="form-item">
          <view class="form-label">联系手机</view>
          <input name="phone" type="number" maxlength="11" class="form-input" placeholder="手机" />
        </view>
        <!--开始日期-->
        <view class="form-item">
          <view class="form-picker">
            <picker name="date" mode="date" value="{{date}}" bindchange="bindDateChange">
              <view class="picker">
                入职时间: {{date}}
              </view>
            </picker>
          </view>
        </view>
        <!--/开始日期-->
        <view class="form-item">
            <button formType="submit" type="primary" class="form-button">提交申请</button>
        </view>
    </form>
  </view>
</view>
